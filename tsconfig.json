{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
      "outDir": "build/dist",
      "module": "esnext",
      "target": "es6",
      "lib": [
        "es6",
        "dom"
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "rootDir": "src",
      "moduleResolution": "node",
      "esModuleInterop": true,
    },
    "include": ["src"],
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ]
  }